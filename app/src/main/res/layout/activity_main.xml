<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/base_background_color"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/backdrop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="18dp"
        android:contentDescription="@string/back_drop"

        android:elevation="16dp"
        app:layout_constraintBottom_toTopOf="@id/textInput"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/view_bottom_round" />

    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/minimum_separation"
        android:layout_marginTop="@dimen/minimum_separation"
        android:elevation="16dp"
        android:fontFamily="@font/montserrat_alternates"
        android:text="@string/app_name"
        android:textColor="?attr/secondary_text_color"
        android:textSize="@dimen/largest_text_size"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/textOutput"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0" />

    <ImageButton
        android:id="@+id/setting"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/setting_icon"
        android:elevation="22dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/setting_icon_back"
        app:layout_constraintEnd_toEndOf="@id/setting_icon_back"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@id/setting_icon_back"
        app:layout_constraintTop_toTopOf="@id/setting_icon_back"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ic_setting" />

    <ImageView
        android:id="@+id/setting_icon_back"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:contentDescription="@string/back_of_setting_icon"
        android:elevation="18dp"
        android:clickable="true"
        android:focusable="true"
        android:alpha="0.85"
        app:layout_constraintVertical_bias="0.5"
        app:layout_constraintBottom_toBottomOf="@id/greeting"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/greeting"
        app:layout_constraintTop_toTopOf="@id/greeting"
        app:srcCompat="@drawable/button_left_round" />

    <TextView
        android:id="@+id/textOutput"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="16dp"
        android:gravity="center"
        android:padding="@dimen/secondary_separation"
        android:textColor="?attr/secondary_text_color"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/actionIcon"
        app:layout_constraintEnd_toEndOf="@id/loader"
        app:layout_constraintStart_toStartOf="@id/loader"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.5" />

    <ImageView
        android:id="@+id/actionIcon"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:contentDescription="@string/current_process_image"
        android:elevation="18dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@id/loader"
        app:layout_constraintEnd_toEndOf="@id/loader"
        app:layout_constraintStart_toStartOf="@id/loader"
        app:layout_constraintTop_toTopOf="@id/loader" />

    <ImageView
        android:id="@+id/loader"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="12dp"
        android:contentDescription="@string/breathing_skivvy"
        android:elevation="16dp"
        app:layout_constraintBottom_toTopOf="@id/receiverBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/greeting"
        app:layout_constraintVertical_bias="0"
        app:srcCompat="@drawable/dots_in_circle" />

    <TextView
        android:id="@+id/feedbackOutput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:elevation="22dp"
        android:textSize="@dimen/smallest_text_size"
        android:gravity="center"
        android:textColor="?attr/base_text_color"
        android:padding="@dimen/base_separation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/backdrop"
    />
    <TextView
        android:id="@+id/textInput"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:elevation="22dp"
        android:gravity="end"
        android:padding="12dp"
        android:textColor="?attr/base_text_color"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintBottom_toBottomOf="@id/receiverBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toEndOf="@id/receiverBtn"
        app:layout_constraintTop_toTopOf="@id/receiverBtn"
        app:layout_constraintVertical_bias="0.5" />

    <ImageButton
        android:id="@+id/receiverBtn"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_margin="12dp"
        android:background="@drawable/button_circle"
        android:contentDescription="@string/command_button"
        android:elevation="22dp"
        android:paddingTop="12dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/backdrop"
        app:layout_constraintVertical_bias="0.5"
        app:srcCompat="@drawable/ic_mic" />

</androidx.constraintlayout.widget.ConstraintLayout>