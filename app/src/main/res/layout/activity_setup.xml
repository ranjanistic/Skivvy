<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@color/dead_blue"
    tools:context=".Setup">
    <ImageView
        android:id="@+id/settingIcon"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_margin="@dimen/base_separation"
        app:srcCompat="@drawable/ic_setttings_icon"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/settingIcon"
        app:layout_constraintBottom_toTopOf="@id/version">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/trainingModeBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_separation"
        android:padding="@dimen/minimum_separation"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:background="@drawable/spruce_square_round_button"
        android:textSize="@dimen/normal_text_size"
        android:visibility="gone"
        android:textColor="?attr/base_text_color"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
    <TextView
        android:id="@+id/muteUnmuteBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_separation"
        android:padding="@dimen/minimum_separation"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:textSize="@dimen/normal_text_size"
        android:textColor="?attr/base_text_color"
        app:layout_constraintTop_toBottomOf="@id/trainingModeBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/biometricsBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/base_separation"
        android:padding="@dimen/minimum_separation"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:textSize="@dimen/normal_text_size"
        android:textColor="?attr/base_text_color"
        app:layout_constraintTop_toBottomOf="@id/muteUnmuteBtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
    <TextView
        android:id="@+id/version"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/end_note"
        android:textColor="?attr/secondary_text_color"
        android:textSize="@dimen/smallest_text_size"
        android:gravity="center"
        app:layout_constraintVertical_bias="1"
        android:text="@string/app_name" />
    <TextView
        android:id="@+id/end_note"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:textColor="?attr/secondary_text_color"
        android:textSize="@dimen/smallest_text_size"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_bias="1"
        android:text="@string/app_tag_line"
        android:layout_margin="@dimen/minimum_separation"/>
</androidx.constraintlayout.widget.ConstraintLayout>